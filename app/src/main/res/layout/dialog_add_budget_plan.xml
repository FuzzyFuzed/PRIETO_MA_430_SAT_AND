<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/blue_primary"
    android:gravity="center_horizontal"
    android:elevation="6dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <TextView
        android:id="@+id/tvAddPlanTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Budget Plan"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_spinner_blue"
        android:padding="12dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/poppins_regular" />

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="â‚±0.00"
        android:inputType="numberDecimal"
        android:background="@drawable/bg_input_blue"
        android:padding="12dp"
        android:textColor="@color/dark_text"
        android:textColorHint="@color/light_gray"
        android:fontFamily="@font/poppins_medium" />

    <Button
        android:id="@+id/btnAddPlan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add Plan"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/blue_dark"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:drawableLeft="@drawable/blue_rounded_box"
        android:drawablePadding="10dp" />

</LinearLayout>
